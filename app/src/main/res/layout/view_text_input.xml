<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8ssp"
        android:layout_marginBottom="@dimen/_1ssp"
        android:text="asdasd"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:visibility="visible" />

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_8ssp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/editLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >


            <RelativeLayout
                android:padding="@dimen/_2ssp"
                android:id="@+id/layoutInputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txtInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8ssp"
                    android:hint="asd"

                    android:layout_marginEnd="@dimen/_18ssp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:layout_marginTop="@dimen/_2ssp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:met_hideUnderline="true"
                    app:met_textColorHint="@color/color_form_view_hint" />



                <TextView
                    android:layout_marginTop="25dp"
                    android:id="@+id/txtForced"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10ssp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_8ssp"
                   android:layout_centerInParent="true"
                    android:text="*"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="visible" />


            </RelativeLayout>





            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_view_line_default"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>