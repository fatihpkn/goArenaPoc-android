<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextInputView">
        <attr name="maxLength" format="string" />
        <attr name="inputTitle" format="string" />
        <attr name="inputHint" format="string" />

        <attr name="inputType" format="enum">
            <enum name="number" value="0" />
            <enum name="numberDecimal" value="1" />
            <enum name="email" value="2" />
            <enum name="phoneNumber" value="3" />
            <enum name="text" value="4" />
            <enum name="passwordd" value="5" />
        </attr>

        <attr name="inputDigits" format="string" />
        <attr name="isFocusable" format="boolean" />
        <attr name="isForced" format="boolean" />
        <attr name="tiv_isWhiteTheme" format="boolean" />
        <attr name="textAllCaps" format="boolean" />
    </declare-styleable>

</resources>